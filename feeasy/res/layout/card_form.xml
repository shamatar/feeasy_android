<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >
        <RelativeLayout
	        style="@style/header_box"
            android:layout_width="match_parent"
        	android:layout_height="wrap_content" >
        		<TextView
        		    android:layout_width ="wrap_content"
        		    android:layout_height="wrap_content"
        		    
        		    android:layout_alignParentLeft="true"
        		    
        		    style="@style/header_text"
		        	android:text="Данные вашей карты" />
        		<ImageView
        		    android:id="@+id/payimageCard"
        		    
        		    android:layout_width ="wrap_content"
        		    android:layout_height="@dimen/largerText"
        		    
        		    android:src="@drawable/pk_default_card"
        		    android:contentDescription="Тип карты"
        		    
        		    android:layout_alignParentRight="true"
		        	android:layout_centerVertical="true" />
        	</RelativeLayout>
        
        <HorizontalScrollView
		    android:id="@+id/cardmenuScroll"
			android:background="@drawable/cardmenu_bg"
			android:scrollbars="none"
		    android:layout_width="match_parent"
			android:layout_height="wrap_content" >
		    <LinearLayout 
		        android:id="@+id/cardmenuNavbar"
		        android:orientation="horizontal"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content">
		    </LinearLayout>
		</HorizontalScrollView>
		
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/paypagerCard" />
        
        <!-- <android.support.v4.view.ViewPager
	        android:id="@+id/paypagerCard"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent" />  -->
</merge>
